<div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 jhiTranslate="settings.title" [translateValues]="{username: settingsAccount.login}"
                *ngIf="settingsAccount">User settings for [<b>{{settingsAccount.login}}</b>]</h2>

            <div class="alert alert-success" *ngIf="success" jhiTranslate="settings.messages.success">
                <strong>Settings saved!</strong>
            </div>

            <jhi-alert-error></jhi-alert-error>

            <form name="form" [formGroup]="formFC" (ngSubmit)="save()" *ngIf="settingsAccount" novalidate>

                    <div class="row">
                            <mat-form-field color="accent" appearance="outline" class="forminput"
                                [matTooltip]="'settings.form.firstname' | translate">
                                    <mat-label jhiTranslate="settings.form.firstname">Firstname</mat-label>
                                    <input matInput
                                        placeholder="{{'settings.form.firstname.placeholder' | translate}}"
                                        formControlName="firstName"
                                        [errorStateMatcher]="esMatcher"
                                        [type]="text"
                                        id="firstName" name="firstName" [(ngModel)]="settingsAccount.firstName"
                                        >
                                    <mat-error *ngIf="formFC.get('firstName').hasError('required')"
                                        jhiTranslate="settings.messages.validate.firstname.required">
                                        Your last name is required.
                                    </mat-error>
                                    <mat-error *ngIf="formFC.get('firstName').hasError('minlength')"
                                    jhiTranslate="settings.messages.validate.firstname.minlength">
                                        Your last name is required to be at least 1 character.
                                    </mat-error>
                                    <mat-error *ngIf="formFC.get('firstName').hasError('maxlength')"
                                        jhiTranslate="settings.messages.validate.firstname.required"
                                        >Your last name cannot be longer than 100 characters.
                                    </mat-error>
                            </mat-form-field>
                    </div>
     
               
                <div class="row">
                        <mat-form-field color="accent" appearance="outline" class="forminput"
                            [matTooltip]="'settings.form.lastname' | translate">
                                <mat-label jhiTranslate="settings.form.lastname">Lastname</mat-label>
                                <input matInput
                                    placeholder="{{'settings.form.lastname.placeholder' | translate}}"
                                    formControlName="lastName"
                                    [errorStateMatcher]="esMatcher"
                                    [type]="text"
                                    id="lastName" name="lastName" [(ngModel)]="settingsAccount.lastName"
                                    >
                                <mat-error *ngIf="formFC.get('lastName').hasError('required')"
                                    jhiTranslate="settings.messages.validate.lastname.required">
                                    Your last name is required.
                                </mat-error>
                                <mat-error *ngIf="formFC.get('lastName').hasError('minlength')"
                                jhiTranslate="settings.messages.validate.lastname.minlength">
                                    Your last name is required to be at least 1 character.
                                </mat-error>
                                <mat-error *ngIf="formFC.get('lastName').hasError('maxlength')"
                                    jhiTranslate="settings.messages.validate.lastname.required"
                                    >Your last name cannot be longer than 100 characters.
                                </mat-error>
                        </mat-form-field>
                </div>


                <div class="row">
                        <mat-form-field color="accent" appearance="outline" class="forminput"
                            [matTooltip]="'global.form.email' | translate">
                                <mat-label jhiTranslate="global.form.email">Email</mat-label>
                                <input matInput
                                    placeholder="{{'global.form.email.placeholder' | translate}}"
                                    formControlName="email"
                                    [errorStateMatcher]="esMatcher"
                                    [type]="email"
                                    id="email" name="email" [(ngModel)]="settingsAccount.email"
                                    >
                                <mat-error *ngIf="formFC.get('email').hasError('required')"
                                    jhiTranslate="global.messages.validate.email.required">
                                    Your email is required.
                                </mat-error>
                                <mat-error *ngIf="formFC.get('email').hasError('email')"
                                    jhiTranslate="global.messages.validate.email.invalid">
                                    Your email is invalid.
                                </mat-error>
                                <mat-error *ngIf="formFC.get('email').hasError('minlength')"
                                    jhiTranslate="global.messages.validate.email.minlength">
                                    Your email is required to be at least 5 characters.
                                </mat-error>
                                <mat-error *ngIf="formFC.get('email').hasError('maxlength')"
                                    jhiTranslate="global.messages.validate.email.maxlength">
                                    Your email cannot be longer than 100 characters.
                                </mat-error>
                        </mat-form-field>
                </div>

                <div class="row" *ngIf="languages && languages.length > 0">
                        <mat-form-field color="accent" appearance="outline" class="forminput">
                                <mat-label for="langKey" jhiTranslate="settings.form.language">Language</mat-label>
                                <mat-select formControlName="languages">
                                <mat-option *ngFor="let language of languages" [value]="language">
                                        {{language | findLanguageFromKey}}
                                </mat-option>
                                </mat-select>
                        </mat-form-field>
                </div>
                <div class="row">
                        <button color="primary" type="submit" mat-raised-button
                        [disabled]="formFC.invalid">
                           <mat-icon matSuffix>check_circle_outline</mat-icon>&nbsp;<span
                                jhiTranslate="settings.form.button">Save</span>
                        </button>
                </div>
            </form>
        </div>
    </div>

</div>
