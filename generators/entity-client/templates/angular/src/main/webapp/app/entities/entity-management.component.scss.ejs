.jh-mat-card-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}
/* Column Gap */
.jh-mat-card-list > * {
    box-sizing: border-box;
    margin-bottom: 16px;
}
.jh-mat-card-list > *:not(:last-child) {
    margin-right: 32px;
}
/* Item sizing */
.jh-mat-card-list-item {
    flex: 0 1 calc(33.3% - 32px);
}
/* medium size viewport */
@media screen and (max-width: 959px) {
    /* Column Gap */
    .jh-mat-card-list > *:not(:last-child) {
        margin-right: 32px;
    }
    /* Item sizing */
    .jh-mat-card-list-item {
        flex: 0 1 calc(50% - 32px);
    }
}
/* small size viewport */
@media screen and (max-width: 599px) {
    .jh-mat-card-list {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }
    .jh-mat-card-list-item > *:not(:last-child) {
        margin-right: unset;
        margin-bottom: 32px;
    }
}
